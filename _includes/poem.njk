{% extends "base.njk" %}

{% block content %}
<article class="poem" itemscope itemtype="http://schema.org/CreativeWork">
  <link itemprop="additionalType" href="https://dbpedia.org/ontology/Poem" />
  <h2 itemprop="name">{{ title }}</h2>
  <p class="author">By <span itemprop="author">{{ author }}</span></p>
  <p class="date">Published <span itemprop="dateCreated">{{ page.date | date }}</span></p>

  {% if award == "winner" %}
  <p class="badge winner">🏆 Winner - {{ category | capitalize }} {{ year }}</p>
  {% elif award == "runner-up" %}
  <p class="badge runner-up">🥈 Runner-Up - {{ category | capitalize }} {{ year }}</p>
  {% endif %}
  
  <pre class="poem-text" itemprop="text"><span>
      {{ content | safe }}
  </span></pre>

  <div class="disclosure">
    {% if ai_use and "none" in ai_use %}
      <p><em>No AI assistance was used in the creation of this poem.</em></p>
    {% elif ai_use %}
      <p><em>The author used AI for {{ ai_use | join(', ') }}.</em></p>
    {% else %}
      <p><em>No AI assistance information provided.</em></p>
    {% endif %}
  </div>
</article>

{% endblock %}